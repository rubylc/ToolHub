{
    "name": "llm-hub-shell",
    "version": "0.1.0",
    "description": "Desktop shell aggregating multiple LLM web UIs (OpenAI, Gemini, DeepSeek, Kimi, etc.) with persistent sessions",
    "main": "dist/main.js",
    "type": "module",
    "scripts": {
        "build": "rm -rf dist && tsc && mkdir -p dist/renderer && cp -a src/renderer/. dist/renderer/",
        "watch": "tsc -w",
        "start": "electron .",
        "dev": "concurrently -n BUILD,ELECTRON -c green,cyan \"tsc -w\" \"wait-on dist/main.js && electron .\"",
        "dist:mac": "npm run build && electron-builder --mac dmg zip",
        "dist:dir": "npm run build && electron-builder --dir"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "electron": "^31.0.0",
        "electron-builder": "^24.13.3",
        "typescript": "^5.4.0",
        "concurrently": "^8.2.0",
        "wait-on": "^7.0.1"
    },
    "dependencies": {
        "electron-store": "^9.0.0"
    },
    "build": {
        "appId": "com.toolhub.shell",
        "productName": "ToolHub",
        "files": [
            "dist/**/*",
            "package.json",
            "assets/**/*"
        ],
        "asar": true,
        "mac": {
            "category": "public.app-category.productivity",
            "target": [
                "dmg",
                "zip"
            ]
        },
        "dmg": {
            "backgroundColor": "#0d1114",
            "window": {
                "width": 540,
                "height": 380
            }
        }
    }
}